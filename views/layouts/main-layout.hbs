<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ pageTitle }}</title>
    <link rel="stylesheet" href="/css/main.css">
    {{#if formsCSS}}
        <link rel="stylesheet" href="/css/forms.css">
    {{/if}}
    {{#if productCSS}}
        <link rel="stylesheet" href="/css/product.css">
        <link rel="stylesheet" href="/css/orders.css">
        <link rel="stylesheet" href="/css/auth.css">
    {{/if}}
</head>

<body>
    <div class="backdrop"></div>
    <header class="main-header">
        <button id="side-menu-toggle">Menu</button>
        <nav class="main-header__nav">
            <ul class="main-header__item-list">
                <li class="main-header__item"><a class="{{#if activeShop }}active{{/if}}" href="/">Shop</a></li>
                <li class="main-header__item"><a class="{{#if activeProducts}}active{{/if}}" href="/products">Products</a></li>
                {{#if  isAuthenticated}}
                <li class="main-header__item"><a class="{{#if activeCart }}active{{/if}}" href="/cart">Cart</a></li>
                <li class="main-header__item"><a class="{{#if activeOrders }}active{{/if}}" href="/orders">Orders</a></li>
                <li class="main-header__item"><a class="{{#if activeAddProduct }}active{{/if}}" href="/admin/add-product">Add Product</a></li>
                <li class="main-header__item"><a class="{{#if activeProducts }}active{{/if}}" href="/admin/products">Admin Products</a></li>
            {{/if}}
            </ul>
            <ul class="main-header__item-list">
            {{#if isAuthenticated}}
                <li class="main-header__item">
                    <form action="/logout" method="post">
                        <h5>Welcome {{this}}</h5>
                        <button type="submit">Logout</button>
                    </form>
                </li>
         {{else }}
                <li class="main-header__item">
                    <a class="{{#if path}} active {{else}} '' {{/if}}" href="/login">Login</a>
                </li>
                <li class="main-header__item">
                    {{!-- <a class="{{#if path === '/signup' ? 'active' : '' }}" href="/signup">Signup</a> --}}
                    <a class="{{#if path}} active {{else}} '' {{/if}}" href="/signup">Signup</a>
                </li>
            {{/if}}
        </ul>
        </nav>
    </header>
    {{{ body }}}
</body>

</html>